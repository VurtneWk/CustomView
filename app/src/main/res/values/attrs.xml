<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--name 自定义View的名字 TextView-->
    <declare-styleable name="CustomTextView">
        <!-- name 属性名称
        format 格式: string 文字  color 颜色
                    dimension 宽高 字体大小  integer 数字
                    reference 资源（drawable）
         -->
        <attr name="cus_text" format="string" />
        <attr name="cus_textColor" format="color" />
        <attr name="cus_textSize" format="dimension" />
        <attr name="cus_maxLength" format="integer" />
        <attr name="cus_background" format="reference|color" />
        <!-- 枚举 -->
        <attr name="cus_inputType">
            <enum name="cus_number" value="1" />
            <enum name="cus_text" value="2" />
            <enum name="cus_password" value="3" />
        </attr>
    </declare-styleable>
    <!--Les03 仿QQ运动步数的自定义View-->
    <declare-styleable name="ImitationQQStepNumberView">
        <attr name="outerColor" format="color" />
        <attr name="innerColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>
</resources>